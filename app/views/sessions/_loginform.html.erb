<%= form_for @user, :url => {:controller => "sessions", :action => "create"} do |f| %>
  <div class="group">
    <%= f.label :email, 'Email', class: "label" %>
    <%= f.text_field :email, class: "input" %>
  </div>
  <div class="group">
    <%= f.label :password, class: "label" %>
    <%= f.password_field :password, class: "input" %>
  </div>
  <div class="group">
    <%= f.check_box :remember_digest, id: "check", class: "icon"%> 
    <%= f.label "Keep me Signed in" %>
  </div>
  <div class="group">
      <%= f.submit "Enter", class: "button" %>
  </div>

  <div class="hr"></div>
          <div class="foot-lnk">
            <a href="/password_resets/new">Forgot Password?</a>
             <%= check_box_tag :remember_me, 1, params[:remember_me] %>
          </div>

<% end %>