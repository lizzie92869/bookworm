<%= form_for @user do |f| %>
  <div class="group">
    <%= f.label :name, 'Username', class: "label" %>
    <%= f.text_field :name, class: "input"  %>
  </div>
  <div class="group">
    <%= f.label :password, class: "label" %>
    <%= f.password_field :password, class: "input" %>
  </div>
  <div class="group">
    <%= f.label :password_repeated, class: "label" %>
    <%= f.password_field :password_repeated, class: "input" %>
  </div>
  <div class="group">
    <%= f.label :email, class: "label" %>
    <%= f.email_field :email, class: "input" %>
  </div>
  <div class="group">
    <%= f.check_box :remember_password, id: "check", class: "icon"%> 
    <%= f.label "Keep me Signed in" %>
  </div>
  <div class="group">
      <%= f.submit "Create Account", class: "button" %>
  </div>
<% end %>