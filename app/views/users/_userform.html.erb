<%= form_for @user do |f| %>
  <div class="group">
    <%= f.label :name, 'Username' %>
    <%= f.text_field :name, class: "input"  %>
  </div>
  <div class="group">
    <%= f.label :password %>
    <%= f.password_field :password, class: "input" %>
  </div>
  <div class="group">
    <%= f.label :password_repeated %>
    <%= f.password_field :password_repeated, class: "input" %>
  </div>
  <div class="group">
    <%= f.label :email %>
    <%= f.email_field :email, class: "input" %>
  </div>
  <div class="group">
      <%= f.submit "Create Account", class: "button" %>
  </div>
<% end %>