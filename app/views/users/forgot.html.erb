<div class="login-wrap">
  <div class="login-html">
    <div class="login-form">
        <%= form_for @user, :url => {:controller => "users", :action => "forgot"} do |f| %>
          <div class="group">
            We will send you an email to reset your password</br></br></br>
          </div>
          <div class="group">
            <%= f.label :email, 'Email', class: "label" %>
            <%= f.text_field :email, class: "input" %>
          </div>
          <div class="group">
              <%= f.submit "Enter", class: "button" %>
          </div>
          <div class="hr"></div>
        <% end %>
      </div>
    </div>
  </div>
</div>



