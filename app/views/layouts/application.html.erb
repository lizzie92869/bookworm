<!DOCTYPE html>
<html>
  <head>

    <title>Bookworm</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

      <body>

        <div id= "nav_bar">

          <%= image_tag('logo.png', id: "logo") %>

          <ul>
            <li><%= link_to "Bookworm", root_path, id: "bookworm"%></li>
            <li><%=link_to "ABOUT", root_path, class:"text_nav"%></li>
            <li><%=link_to "READ", root_path, class:"text_nav"%></li>
            <li><%=link_to "WRITE", root_path, class:"text_nav"%></li>
          </ul>

          <div id= "sign">
            <% if logged_in? %>
            <p> Hello <%= current_user.name %>! <%= button_to "Sign out", logout_path, method: :delete %></p>
          <%else%>
            <p> Sign in / Sign up</p>
          <% end %>
          </div>

        </div>
        
        <div id= "frame">
          <%= yield %>
        </div>

        <div id="foot_centered">
        <div id= "private_policy">private policy</div>
        <div id= "foot">Â©2017 Bookworm - All Rights Reserved</div>

        </div>
        

        
      </body>

</html>
